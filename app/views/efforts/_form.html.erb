<%= simple_form_for [@project, @effort], wrapper: :vertical_form do |f| %>
  <% if @effort.errors.any? %>
    <div role="alert" class="alert alert-error mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <h3 class="font-bold">Validation Error</h3>
        <div class="text-xs"><%= @effort.errors.full_messages.to_sentence.capitalize %></div>
      </div>
    </div>
  <% end %>
  <%= f.input :title, input_html: { autofocus: true } %>
  <%= f.input :description %>
  <%= f.hidden_field :parent_id %>
  <%= link_to "Cancel", project_efforts_path(@project), class: "btn btn-warning" %>
  <%= f.submit class: "btn btn-secondary" %>
<% end %>