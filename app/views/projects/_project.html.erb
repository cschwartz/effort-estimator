<tr id="<%= dom_id(project) %>" class="project">
  <td class="title"><%= link_to project.title, project_path(project), data: { turbo_frame: "_top" }, class: "link" %></td>
  <td class="actions flex gap-2">
    <%= link_to "Edit", edit_project_path(project), class: "btn btn-secondary", data: { turbo_frame: "_top" } %>
    <%= button_to "Delete", project, 
            method: :delete,
            data: { 
              confirm: "Are you sure?",
              turbo_method: :delete
            },
            class: "btn btn-warning" %>
  </td>
</tr>
