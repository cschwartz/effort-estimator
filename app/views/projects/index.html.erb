<div>
  <%= render BreadcrumbsComponent.new(Project) %>
  <div class="projects">
    <%= render PageHeaderComponent.new(Project) do |c| %>
      <% c.with_action do %>
        <%= render CreateActionComponent.new(href: new_project_path, turbo_frame: dom_id(Project.new)) %>
      <% end %>
    <% end %>
    <%= turbo_frame_tag Project.new %>
    <div class="list">
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th>Title</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="projects">
          <%= render @projects %>
          <% if @projects.empty? %>
            <tr>
              <td id="empty" colspan="2" class="text-center py-6 text-base-content/60 italic">
                No existing projects
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>