<%= render Display::PropertyListComponent.new do |list| %>
  <% list.with_property_text(label: "Name", value: "John Doe") %>
  <% list.with_property_text(label: "Email", value: "john.doe@example.com") %>
  <% list.with_property_prose(label: "Description", value: "This is a longer description.\n\nIt has multiple paragraphs and will be formatted nicely.") %>
  <% list.with_property_badge(label: "Status", value: "active") %>
  <% list.with_property_badge(label: "Type", value: "scaled") %>
